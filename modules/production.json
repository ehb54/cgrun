{
    "moduleid"    : "production"
    ,"label"      : "Production"
    ,"help"       : "Run production - only possible after equilibration"
    ,"executable" : "production"
    ,"resource"   : "oscluster"
#    ,"dependencies" : [ 
#        { "base" : "python" }
#        ,{ "file" : "mass_production.py" }
# comment above 2 lines and uncomment 2 lines below for perl executable
#        { "base" : "perl" }
#        ,{ "cpan" : "JSON" }
#    ]
    ,"fields"   : [
        {
            "role"       : "input"
            ,"id"        : "module_header"
            ,"label"     : "Run production step"
            ,"type"      : "label"
            ,"default"   : "header4"
            ,"prehline"  : "true"
            ,"posthline" : "true"
        }
        ,{
            "role"       : "input"
            ,"id"        : "os_flavor"
            ,"label"     : "GPU slice"
            ,"type"      : "listbox"
            ,"values"    : "1/5 A100 GPU~g3_small~2/5 A100 GPU~g3_medium~3/5 A100 GPU~g3_large~4/5 A100 GPU~g3_xl"
            ,"default"   : "g3_small"
            ,"help"      : "Select the fraction of an A100 GPU to use.<br>Use the smallest fraction which does not run out of GPU memory for most SU-efficient usage."
        }
        ,{
            "role"         : "input"
            ,"id"          : "sparams"
            ,"label"       : "Details"
            ,"type"        : "checkbox"
            ,"repeater"    : "true"
            ,"hook"        : "production_defaults.php"
        }
        ,{
            "role"         : "input"
            ,"id"          : "description"
            ,"label"       : "Description"
            ,"type"        : "textarea"
            ,"repeat"      : "sparams"
        }
        ,{
            "role"         : "input"
            ,"id"          : "lastoutput"
            ,"label"       : "Last output"
            ,"type"        : "text"
            ,"readonly"    : "true"
            ,"repeat"      : "sparams"
        }
        ,{
            "role"         : "input"
            ,"id"          : "temperature"
            ,"label"       : "Temperature"
            ,"type"        : "float"
            ,"repeat"      : "sparams"
        }
        ,{
            "role"         : "input"
            ,"id"          : "run_steps"
            ,"label"       : "Run steps"
            ,"type"        : "integer"
            ,"repeat"      : "sparams"
        }
#        ,{
#            "role"         : "input"
#            ,"id"          : "numsteps"
#            ,"label"       : "Number of steps"
#            ,"type"        : "text"
#            ,"repeat"      : "sparams"
#            ,"readonly"    : "true"
#            ,"calc"        : "run_steps"
#            ,"help"        : "Duplicates <i>Run steps</i>"
#            ,"hidden"      : "true"
#        }
        ,{
            "role"         : "input"
            ,"id"          : "dcdfreq"
            ,"label"       : "DCD output frequency"
            ,"type"        : "integer"
            ,"repeat"      : "sparams"
        }
        ,{
            "role"       : "output"
            ,"id"        : "gpustats"
            ,"type"      : "html"
            ,"label"     : "GPU usage"
        }
        ,{
            "role"       : "output"
            ,"id"        : "timing"
            ,"type"      : "html"
            ,"label"     : "NAMD timing"
        }
        ,{
            "role"       : "output"
            ,"id"        : "inputlink"
            ,"label"     : "NAMD input"
            ,"type"      : "file"
            ,"help"      : "Produced by CHARMM-gui (unless it was manually modified or <i>Simulation parameters</i> were changed). Right click to download"
        }
        ,{
            "role"       : "output"
            ,"id"        : "stdoutlink"
            ,"label"     : "NAMD output"
            ,"type"      : "file"
            ,"help"      : "Live output during run. Right click to download"
        }
        ,{
            "role"       : "output"
            ,"id"        : "dcdlink"
            ,"label"     : "DCD"
            ,"type"      : "file"
            ,"help"      : "Final DCD"
        }
        ,{
            "role"       : "output"
            ,"id"        : "tgzlink"
            ,"label"     : "Archive of produced files"
            ,"type"      : "file"
            ,"help"      : "tar.gz format. Does not include DCD which is already compressed"
        }
        ,{
            "role"       : "output"
            ,"id"        : "pdblastdry"
            ,"type"      : "atomicstructure"
            ,"label"     : "Last frame structure"
            ,"help"      : "No waters or ions included<br>Right click on structure for JSmol controls"
            ,"width"     : "100%"
            ,"jsmoladd"  : "ribbon only; color structure"
        }
        ,{
            "role"       : "output"
            ,"id"        : "run_e_plot"
            ,"type"      : "plotly"
            ,"label"     : " "
        }
        ,{
            "role"       : "output"
            ,"id"        : "run_t_plot"
            ,"type"      : "plotly"
            ,"label"     : " "
        }
    ]
}

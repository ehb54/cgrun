{
    "moduleid"    : "equilibration"
    ,"label"      : "Equilibration"
    ,"help"       : "Run equilibration"
    ,"executable" : "equilibration"
#    ,"resource"   : "oscluster"
    ,"fields"   : [
        {
            "role"       : "input"
            ,"id"        : "module_header"
            ,"label"     : "Run equilibration step"
            ,"type"      : "label"
            ,"default"   : "header4"
            ,"prehline"  : "true"
            ,"posthline" : "true"
        }
        ,{
            "role"       : "input"
            ,"id"        : "os_flavor"
            ,"label"     : "Processor cores"
            ,"type"      : "listbox"
            ,"values"    : "2~m3_small~4~m3_quad~8~m3_medium~16~m3_large~32~m3_xl~64~m3_2xl"
#            ,"values"    : "2~m3_small~4~m3_quad~8~m3_medium~16~m3_large~32~m3_xl~64~m3_2xl~128~m3_3xl"
            ,"default"   : "m3_large"
#            ,"default"   : "m3_quad"
            ,"help"      : "Select the number of cores to use.<br>More cores will generally run faster (up to a point, after which it may run slower).<br>Too many cores will over-consume your allocation.<br>Memory limits increase with increasing number of cores."
        }
        ,{
            "role"         : "input"
            ,"id"          : "sparams"
            ,"label"       : "Simulation parameters"
            ,"type"        : "checkbox"
            ,"repeater"    : "true"
            ,"hook"        : "equilibration_defaults.php"
        }
        ,{
            "role"         : "input"
            ,"id"          : "temperature"
            ,"label"       : "Temperature"
            ,"type"        : "float"
            ,"repeat"      : "sparams"
        }
        ,{
            "role"         : "input"
            ,"id"          : "min_steps"
            ,"label"       : "Minimization steps"
            ,"type"        : "integer"
            ,"repeat"      : "sparams"
        }
        ,{
            "role"         : "input"
            ,"id"          : "run_steps"
            ,"label"       : "Run steps"
            ,"type"        : "integer"
            ,"repeat"      : "sparams"
        }
        ,{
            "role"         : "input"
            ,"id"          : "dcdfreq"
            ,"label"       : "DCD output frequency"
            ,"type"        : "integer"
            ,"repeat"      : "sparams"
        }
        ,{
            "role"       : "output"
            ,"id"        : "inputlink"
            ,"label"     : "NAMD input"
            ,"type"      : "file"
            ,"help"      : "Produced by CHARMM-gui (unless it was manually modified or Simulation parameters were changed). Right click to download"
        }
        ,{
            "role"       : "output"
            ,"id"        : "stdoutlink"
            ,"label"     : "NAMD output"
            ,"type"      : "file"
            ,"help"      : "Live output during run. Right click to download"
        }
        ,{
            "role"       : "output"
            ,"id"        : "dcdlink"
            ,"label"     : "DCD"
            ,"type"      : "file"
            ,"help"      : "Final DCD"
        }
        ,{
            "role"       : "output"
            ,"id"        : "tgzlink"
            ,"label"     : "Archive of produced files"
            ,"type"      : "file"
            ,"help"      : "tar.gz format. Does not include DCD which is already compressed"
        }
        ,{
            "role"       : "output"
            ,"id"        : "pdblastdry"
            ,"type"      : "atomicstructure"
            ,"label"     : "Last frame structure"
            ,"help"      : "No waters or ions included, Right click on structure for JSmol controls"
            ,"width"     : "100%"
            ,"jsmoladd"  : "ribbon only; color structure"
        }
        ,{
            "role"       : "output"
            ,"id"        : "run_e_plot"
            ,"type"      : "plotly"
            ,"label"     : " "
        }
        ,{
            "role"       : "output"
            ,"id"        : "run_t_plot"
            ,"type"      : "plotly"
            ,"label"     : " "
        }
        ,{
            "role"       : "output"
            ,"id"        : "min_e_plot"
            ,"type"      : "plotly"
            ,"label"     : " "
        }
    ]
}
